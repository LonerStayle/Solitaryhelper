<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="newsTitle"
        type="String" />
    <variable
        name="newsText"
        type="String" />
    <variable
        name="imageUrl"
        type="String" />
</data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_data"
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_currentTime" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_topicResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/imageView_news"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_data"
            app:spanCount="3" />




            <ImageView
                android:id="@+id/imageView_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@tools:sample/avatars"
                app:imageUrl="@{imageUrl}"/>

        <TextView
            android:id="@+id/textView_newsTitle"
            tools:text="뉴스 타이틀"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{newsTitle}"
            android:maxLength="12"
            app:layout_constraintStart_toStartOf="@+id/imageView_news"
            app:layout_constraintTop_toTopOf="@+id/imageView_news" />

        <TextView
            android:id="@+id/textView_newsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            tools:text="뉴스 내용"
            android:maxLength="20"
            android:maxLines="1"
            android:text="@{newsText}"
            app:layout_constraintStart_toStartOf="@+id/imageView_news"
            app:layout_constraintTop_toBottomOf="@+id/textView_newsTitle" />








    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>