<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <Button
         android:id="@+id/button_sendEatingHouse"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="54dp"
         android:layout_marginEnd="54dp"
         android:text="빠른 혼밥집 찾기"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <RelativeLayout
         android:id="@+id/mapViewContainer"
         android:layout_width="0dp"
         android:layout_height="0dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/button_sendEatingHouse"
         android:layout_margin="12dp">

          <TextView
              android:id="@+id/textView_CurrentPositionInfo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="수신중..."
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              tools:layout_editor_absoluteY="253dp" />

          <TextView
              android:id="@+id/textView_buttonCurrentPositionInfo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="현재위치"
              tools:layout_editor_absoluteX="183dp"
              tools:layout_editor_absoluteY="173dp" />

     </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>