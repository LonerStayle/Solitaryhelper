<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <Button
         android:id="@+id/button_sendEatingHouse"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="54dp"
         android:layout_marginEnd="54dp"
         android:text="혼밥 찾기"
         android:textStyle="bold"
         android:background="@drawable/main_dialoglayout_background"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <RelativeLayout
         android:id="@+id/mapViewContainer"
         android:layout_width="0dp"
         android:layout_height="0dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/button_sendEatingHouse"
         android:padding="12dp"
       >
          <ImageView
              android:id="@+id/mapViewAfter"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:visibility="gone"
              android:src="@drawable/mapviewimage"/>

     </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>