<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport= "true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager_fakekakaoTalkInfo"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="16dp"
        android:clipToPadding="false"
        android:focusableInTouchMode="true"
        android:fillViewport= "true"
        android:overScrollMode="never"
        />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_skillInfoKaKaoTalkIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView_fakeKaKaoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="가짜 카카오톡"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_fakeKaKaoSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="보조 설명하는 란 "
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_fakeKaKaoTitle" />

                <TextView
                    android:id="@+id/textView_fakeKaKaoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="디테일 하게 2~3줄 설명 "
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_fakeKaKaoSubTitle" />

                <TextView
                    android:id="@+id/textView_fakeKaKaoSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="종류 나열해서 설명"
                    android:textSize="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_fakeKaKaoText" />

                <Button
                    android:id="@+id/button_kaKaoTalkStart"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Button"
                    app:layout_constraintBottom_toBottomOf="@id/layout_skillInfoKaKaoTalkIntro"
                    app:layout_constraintEnd_toEndOf="@+id/layout_skillInfoKaKaoTalkIntro"
                    app:layout_constraintTop_toTopOf="@+id/layout_skillInfoKaKaoTalkIntro" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager_fakeCallInfo"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="16dp"
                android:focusableInTouchMode="true"
                android:fillViewport= "true"
                android:overScrollMode="never"
                android:clipToPadding="false"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_skillInfoCallIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView_callTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="가짜 전화"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_callSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="보조 설명하는 란 "
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_callTitle" />

                <TextView
                    android:id="@+id/textView_callText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="디테일 하게 2~3줄 설명 "
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_callSubTitle" />

                <TextView
                    android:id="@+id/textView_callSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="종류 나열해서 설명"
                    android:textSize="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_callText" />

                <Button
                    android:id="@+id/button_callStart"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Button"
                    app:layout_constraintBottom_toBottomOf="@id/layout_skillInfoCallIntro"
                    app:layout_constraintEnd_toEndOf="@+id/layout_skillInfoCallIntro"
                    app:layout_constraintTop_toTopOf="@+id/layout_skillInfoCallIntro"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager_fakeSmsInfo"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="16dp"
                android:focusableInTouchMode="true"
                android:clipToPadding="false"
                android:fillViewport= "true"
                android:overScrollMode="never"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_skillInfoSmsIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView_smsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="가짜 문자"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_smsSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="보조 설명하는 란 "
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_smsTitle" />

                <TextView
                    android:id="@+id/textView_smsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="디테일 하게 2~3줄 설명 "
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_smsSubTitle" />

                <TextView
                    android:id="@+id/textView_FakeKaKaoSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="종류 나열해서 설명"
                    android:textSize="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_smsText" />


                <Button
                    android:id="@+id/button_smsStart"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Button"
                    app:layout_constraintBottom_toBottomOf="@id/textView_FakeKaKaoSubText"
                    app:layout_constraintEnd_toEndOf="@+id/textView_FakeKaKaoSubText"
                    app:layout_constraintTop_toTopOf="@+id/textView_FakeKaKaoSubText"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>